@page "/"
@inject NavigationManager Navigation

<div class="flex items-center justify-center h-screen bg-gradient-to-tr from-blue-400 to-purple-950">
    <div class="flex flex-col md:gap-y-5 gap-y-10 bg-indigo-500 text-white rounded-lg shadow-lg p-10 h-screen w-screen md:w-auto md:h-auto">
        <h1 class="text-3xl font-bold">Добро пожаловать!</h1>
        <h2 class="text-1xl font-bold">Пожалуйста, войдите в систему</h2>
        <button @onclick="@ToAuthPage" class="bg-indigo-700 hover:bg-indigo-800 active:bg-indigo-950 text-white rounded-md p-2">Войти</button>
    </div>
</div>

@code
{
    private void ToAuthPage() => Navigation.NavigateTo("auth");
}
